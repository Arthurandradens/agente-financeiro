{
  "name": "dashboard-financeiro-api",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "tsx scripts/migrate.ts",
    "db:push": "npm run db:generate && npm run db:migrate",
    "db:clean": "tsx scripts/clean-db.ts",
    "seed:categories": "tsx scripts/seed-categories.ts",
    "seed:payment-methods": "tsx scripts/seed-payment-methods.ts",
    "backfill:transactions": "tsx scripts/backfill-transactions.ts",
    "backfill:payment-methods": "tsx scripts/backfill-payment-methods.ts",
    "create:view": "tsx scripts/create-view.ts",
    "setup:postgres": "tsx scripts/setup-postgres.ts",
    "setup:db": "npm run db:push && npm run seed:categories && npm run seed:payment-methods && npm run backfill:transactions && npm run create:view",
    "setup:payment-methods": "npm run seed:payment-methods && npm run backfill:payment-methods",
    "test": "vitest run"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/swagger": "^8.12.0",
    "@fastify/swagger-ui": "^2.0.0",
    "better-sqlite3": "^9.2.2",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.29.0",
    "fastify": "^4.24.3",
    "fastify-plugin": "^5.1.0",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^2.0.16",
    "drizzle-kit": "^0.20.4",
    "supertest": "^6.3.3",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
